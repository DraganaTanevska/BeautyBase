@model BeautyBaseFinal.Models.AddToRoleModel 
@{
    ViewBag.Title = "AddUserToRole";
}

<h2 style="color: lightcoral">Додели улога</h2>


<h4 style="color: lightcoral">Додели улога за соодветно корисничко име (email):</h4>
@using (Html.BeginForm("AddUserToRole","Account"))
{
    <div class="form-group">
    @Html.LabelFor(m =>m.Email)
    @Html.TextBoxFor(m => m.Email, new { @class = "form-control"})
    </div>
    <div class="form-group">
    @Html.DropDownListFor(m => m.selectedRole, new SelectList(Model.roles), new { @class = "form-control" })

    </div>

    <button  style="color: white; background-color: lightcoral;" class="btn btn-default" type="submit">Зачувај</button>
}